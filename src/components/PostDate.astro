---
import { Post } from '../lib/interfaces.ts'
import { getDateAndTimeStr } from '../lib/blog-helpers.ts'

export interface Props {
  post: Post
}

const { post } = Astro.props
---

<div class="post-date">
  {post.Date ? getDateAndTimeStr(post.Date) : ''}
</div>

<style>
  .post-date {
    padding: 0.6rem 0.3rem;
    font-size: 0.9rem;
  }
</style>
